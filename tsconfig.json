{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es5",
    "lib": ["es6"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "types": ["reflect-metadata", "node", "jest"],
    "outDir": "dist",

    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "skipLibCheck": true
  }
}